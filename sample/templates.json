{
	"version": "v1",
	"groups": [{
			"name": "Service",
			"section": "service",
			"templates": [{
					"name": "Service",
					"filename": "${service}_service.yml",
					"template_filename": "service.yml",
					"description": "Service definition",
					"kind": "service",
					"tags": ["service"]
				},
				{
					"name": "Deployment",
					"filename": "${service}_deploy.yml",
					"template_filename": "deploy.yml",
