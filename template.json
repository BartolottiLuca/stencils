{
	"version": "v1",
	"groups": [{
			"name": "Service",
			"section": "service",
			"templates": [{
					"name": "Service",
					"filename": "foo/${service}_service.yml",
					"template_filename": "foo/service.yml",
					"description": "Service definition",
					"kind": "service",
					"tags": ["service"]
				},
				{
					"name": "Deployment",
					"filename": "foo/${service}_deploy.yml",
					"template_filename": "foo/deploy.yml",
					"description": "Deployment",
					"kind": "service",
					"tags": ["service"]
				}
			]
		},
		{
			"name": "Config",
			"section": "config",
			"templates": [{
					"name": "Setup",
					"filename": "foo/setup.yml",
					"template_filename": "foo/setup.yml",
					"description": "Setup namespace, etc",
					"kind": "env",
					"tags": ["setup"]
				},
				{
					"name": "Environments",
					"filename": "foo/env.yml",
					"template_filename": "foo/env.yml",
					"description": "ConfigMaps",
					"kind": "env",
					"tags": ["config"]
				},
				{
					"name": "Event Relay",
					"filename": "foo/event-relay.yml",
					"template_filename": "foo/event-relay.yml",
					"description": "Notify when formations deployed",
					"kind": "env",
					"tags": ["config", "setup"]
				}
			]
		},
		{
			"name": "Custom",
			"section": "custom",
			"templates": [{
				"name": "Custom",
				"filename": "foo/blank.yml",
				"template_filename": "foo/blank.yml",
				"description": "Blank custom file",
				"kind": "custom",
				"tags": []
			},
			{
				"name": "Redis",
				"filename": "foo/redis.yml",
				"template_filename": "foo/redis.yml",
				"description": "Basic Redis",
				"kind": "custom",
				"tags": ["service"]
			}]
		}
	]
}
