{
	"version": "v1",
	"templates": [
		{
			"name": "Service",
			"filename_pattern": "${service}_service.yml",
			"filename": "stencils/service.yml",
			"description": "Defines a service",
			"context_type": "service",
			"tags": ["service"],
			"preferred_sequence": 2
		},
		{
			"name": "Setup",
			"filename_pattern": "setup.yml",
			"filename": "stencils/setup.yml",
			"description": "Setup namespace, etc",
			"context_type": "stack",
			"tags": ["setup"],
			"preferred_sequence": -9999
		},
		{
			"name": "Default HTTP Backend",
			"filename_pattern": "default-http-backend.yml",
			"filename": "stencils/default-http-backend.yml",
			"description": "Default HTTP Backend",
			"context_type": "stack",
			"tags": ["setup", "config"],
			"preferred_sequence": -9997
		},
		{
			"name": "Custom",
			"filename_pattern": "blank.yml",
			"filename": "stencils/blank.yml",
			"description": "Blank custom file",
			"context_type": "stack",
			"tags": [],
			"preferred_sequence": 9998
		}
	],
	"policies": [
		{
			"name": "NoPortInServices",
			"filename_pattern": "no-port-for-services.cop",
			"filename": "policies/no-port-num.cop",
			"description": "Block a port",
			"selector": "kind: Service",
			"tags": []
		},
		{
			"name": "NoLatestInImageTag",
			"filename_pattern": "no-latest-image.cop",
			"filename": "policies/no-latest-image.cop",
			"description": "Ban use of latest as image tag",
			"selector": "kind: Deployment",
			"tags": []
		},
		{
			"name": "MySQLVersionCheck",
			"filename_pattern": "only-minor-upgrades.cop",
			"filename": "policies/only-minor-upgrades.cop",
			"description": "Only allow minor version upgrades",
			"selector": "kind: Deployment",
			"tags": []
		},
		{
			"name": "DeploymentFilenamePolicy",
			"filename_pattern": "filename-policy.cop",
			"filename": "policies/filename-policy.cop",
			"description": "Enforce filename policies",
			"selector": "",
			"tags": []
		},
		{
			"name": "LoadBalancerIpinRange",
			"filename_pattern": "lb-in-range.cop",
			"filename": "policies/lb-in-range.cop",
			"description": "Load Balancer IP is within the range",
			"selector": "kind: Service",
			"tags": []
		},
		{
			"name": "NoDefaultNamespace",
			"filename_pattern": "no-default-namespace.cop",
			"filename": "policies/no-default-namespace.cop",
			"description": "Namespace is available and not default",
			"selector": "",
			"tags": []
		},
		{
			"name": "NoDockerHub",
			"filename_pattern": "no-dockerhub.cop",
			"filename": "policies/no-dockerhub.cop",
			"description": "No DockerHub images",
			"selector": "kind: Deployment",
			"tags": []
		},
		{
			"name": "OnlyFromPrivateRepo",
			"filename_pattern": "only-private-repo.cop",
			"filename": "policies/only-private-repo.cop",
			"description": "Only pull images from our private registry",
			"selector": "kind: Deployment",
			"tags": []
		},
		{
			"name": "Custom",
			"filename_pattern": "blank.cop",
			"filename": "policies/blank.cop",
			"description": "Blank custom file",
			"selector": "",
			"tags": []
		}
	]
}
